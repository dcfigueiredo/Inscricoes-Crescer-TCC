@model InscricoesCrescer.Models.ListaCandidatosViewModel
@using InscricoesCrescer.Models
@{
    string ultimaPagina = Model.UltimaPagina ? "true" : "false";
}
<div id="lista-candidatos">
    <div class="titulo-listagem-candidatos">
        <h1>Tabela de Candidatos</h1>
    </div>

            <div id="no-more-tables">
                <table data-ultima-pagina="@ultimaPagina" id="table-candidatos" class="col-md-10 table table-striped cf">
                    <thead class="cf">
                        <tr>
                            <th>Nome</th>
                            <th>Telefone</th>
                            <th>Idade</th>
                            <th>Email</th>
                            <th>Situação</th>
                            <th>Linkedin</th>
                            <th>Editar</th>
                            <th>Entrevistar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (CandidatoParaViewModel item in Model.Candidatos)
                            {
                                <tr>
                                    <td>@item.Nome</td>
                                    <td>@item.Telefone</td>
                                    <td>@item.Idade</td>
                                    <td>@item.Email</td>
                                    <td>@item.Situacao</td>
                                    <td>@item.Linkedin</td>
                                    <td><a href="#" id="@item.Id" class="entrevistas">Entrevistas</a></td>                                    
                                    <td>@Html.ActionLink("Editar", "Editar", "Administrativo", new { id = @item.Id }, null)</td>
                                    @*<a href="/Administrativo/Editar?id=1">Editar</a>*@
                                </tr>
                            }
                        }
                    </tbody>
                </table>                               
                    <button class="btn btn-default" id="btn-voltar">Voltar</button>
                    <button class="btn btn-default" id="btn-avancar">Avançar</button>                
            </div>
</div>