@model InscricoesCrescer.Models.ListaCandidatosViewModel
@using InscricoesCrescer.Models
@{
    string ultimaPagina = Model.UltimaPagina ? "true" : "false";
}
<div id="lista-candidatos">
    <div class="container">
        <div class="row">
            <div id="no-more-tables">
                <table data-ultima-pagina="@ultimaPagina" id="table-candidatos" class="col-md-12 table table-striped table-inverse table-condensed cf">
                    <thead class="cf">
                        <tr>
                            <th>Nome</th>
                            <th>Telefone</th>
                            <th>Idade</th>
                            <th>Email</th>
                            <th>Situação</th>
                            <th>Linkedin</th>
                            <th>Editar</th>
                            <th>Entrevistar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (CandidatoParaViewModel item in Model.Candidatos)
                            {
                                <tr>
                                    <td>@item.Nome</td>
                                    <td>@item.Telefone</td>
                                    <td>@item.Idade</td>
                                    <td>@item.Email</td>
                                    <td>@item.Situacao</td>
                                    <td>@item.Linkedin</td>
                                    <td>@Html.ActionLink("Entrevistar", "Entrevistar", "Administrativo", new { id = @item.Id }, null)</td>
                                    <td>@Html.ActionLink("Editar", "Editar", "Administrativo", new { id = @item.Id }, null)</td>
                                    @*<a href="/Administrativo/Editar?id=1">Editar</a>*@
                                </tr>
                            }
                        }
                    </tbody>
                </table>
                <div class="container">
                    <button class="btn btn-default" id="btn-voltar" disabled>Voltar</button>
                    <button class="btn btn-default" id="btn-avancar">Avançar</button>
                </div>
            </div>
        </div>
    </div>
</div>