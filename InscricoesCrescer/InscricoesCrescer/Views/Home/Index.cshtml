@model InscricoesCrescer.Models.CandidatoModel
@{
    ViewBag.Title = "Index";
    Layout = null;
}
<title>Cadastro</title>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/estilo.css" rel="stylesheet" />
<!--js captcha-->
<script src='https://www.google.com/recaptcha/api.js?hl=pt-BR'></script>

<div class="menu">
    <img src="~/Content/imagens/logo-vertical-claro.png" alt="Logo-Cwi">
</div>

<div class="container-cadastro">
    <!-- <div class="row">-->
    <div class="mascote">
        <img src="~/Content/imagens/mascote.jpg" alt="mascote">
    </div>
    <h2 class="cadastro">Cadastro do Candidato</h2>


    <h3 style="color:green">
        @TempData["cadastradoComSucesso"]
    </h3>
    <h3 style="color:red">
        @TempData["cadastradoJaExiste"]
    </h3>

    @using (Html.BeginForm("Salvar", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(model => model.Nome, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-5">
                @Html.TextBoxFor(model => model.Nome, new { @class = "form-control", required = "" })
                @Html.ValidationMessageFor(model => model.Nome)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Email, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-5">
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", type = "email", required = "" })
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Instituicao, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-5">
                @Html.TextBoxFor(model => model.Instituicao, new { @class = "form-control", required = "" })
                @Html.ValidationMessageFor(model => model.Instituicao)
            </div>
        </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Curso, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-5">
                    @Html.TextBoxFor(model => model.Curso, new { @class = "form-control", required = "" })
                    @Html.ValidationMessageFor(model => model.Curso)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Conclusao, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-5">
                    @Html.TextBoxFor(model => model.Conclusao, new { @class = "form-control datefield", type = "date", required = "" })
                    @Html.ValidationMessageFor(model => model.Conclusao)
                </div>
            </div>
            <!-- Tema dark :  data-theme="dark"-->
            <div class="g-recaptcha" data-sitekey="@TempData["captcha"]"></div>


            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-10">
                    <button type="submit" class="btn btn-default">Salvar</button>
                </div>
            </div>
    }
</div>
<footer>
    &copy; Projeto Crescer - CWI SOFTWARE
</footer>
