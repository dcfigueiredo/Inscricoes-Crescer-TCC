@model InscricoesCrescer.Models.CandidatoModel
@{
    ViewBag.Title = "Index";
    Layout = null;
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/estilo.css" rel="stylesheet" />
<div class="container">
    <div class="row">
        <h2 class="cadastro">Cadastro</h2>

        <h3 style="color:red">
            @TempData["cadastradoComSucesso"]
        </h3>

        @using (Html.BeginForm("Salvar", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(model => model.Nome, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-5">
                    @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Nome)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Email, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-5">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Instituicao, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-5">
                    @Html.TextBoxFor(model => model.Instituicao, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Instituicao)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Curso, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-5">
                    @Html.TextBoxFor(model => model.Curso, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Curso)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Conclusao, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-5">
                    @Html.TextBoxFor(model => model.Conclusao, new { @class = "form-control datefield", type = "date" })
                    @Html.ValidationMessageFor(model => model.Conclusao)
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Salvar</button>
                </div>
            </div>
        }
    </div>
</div>